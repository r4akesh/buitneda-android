                    </com.google.android.material.textfield.TextInputLayout>-->

                    <LinearLayout
                        android:id="@+id/pass_validation_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_normal"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:layout_marginEnd="@dimen/spacing_normal"
                        android:background="@color/color_background"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/pass_valid_image"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            app:srcCompat="@drawable/ic_dot_grey" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/pass_length_valid_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/minimum_length_of_this_field_must_be_equal_or_greater_than_8_symbols_leading_and_trailing_spaces_will_be_ignored"
                            android:textColor="@color/text_color_secondary"
                            android:textSize="@dimen/text_size_small" />
                    </LinearLayout>

<!--android:visibility="@{data.sellerRegistrationStatus ? View.VISIBLE : View.GONE}"-->
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/sign_up_as_seller"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_normal"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:layout_marginEnd="@dimen/spacing_normal"
                        android:checked="@={data.signUpAsSeller}"
                        android:ellipsize="end"
                        android:lines="2"
                        android:text="@string/sign_up_as_seller"
                        android:textAlignment="viewStart"
                        android:textColor="@color/text_color_primary"
                        android:textSize="@dimen/text_size_small"
                         />

                    <!--         <android.support.design.widget.TextInputLayout
                                 android:id="@+id/shop_name"
                                 style="@style/CustomTilStyle"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:layout_marginEnd="@dimen/spacing_normal"
