<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="handler"
            type="com.webkul.mobikul.handlers.QtyPopupMenuHandler" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_background"
        android:orientation="vertical">

        <TextView
            fontPath="fonts/Montserrat-SemiBold.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="@{() -> handler.onClickQtyNo(@string/one)}"
            android:paddingStart="@dimen/spacing_normal"
            android:paddingTop="@dimen/spacing_generic"
            android:paddingEnd="@dimen/spacing_normal"
            android:paddingBottom="@dimen/spacing_generic"
            android:text="@string/one"
            android:textColor="@color/text_color_secondary"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_background" />

        <TextView
            fontPath="fonts/Montserrat-SemiBold.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="@{() -> handler.onClickQtyNo(@string/two)}"
            android:paddingStart="@dimen/spacing_normal"
            android:paddingTop="@dimen/spacing_generic"
            android:paddingEnd="@dimen/spacing_normal"
            android:paddingBottom="@dimen/spacing_generic"
            android:text="@string/two"
            android:textColor="@color/text_color_secondary"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_background" />

        <TextView
            fontPath="fonts/Montserrat-SemiBold.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="@{() -> handler.onClickQtyNo(@string/three)}"
            android:paddingStart="@dimen/spacing_normal"
            android:paddingTop="@dimen/spacing_generic"
            android:paddingEnd="@dimen/spacing_normal"
            android:paddingBottom="@dimen/spacing_generic"
            android:text="@string/three"
            android:textColor="@color/text_color_secondary"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_background" />

        <TextView
            fontPath="fonts/Montserrat-SemiBold.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="@{() -> handler.onClickQtyNo(@string/four)}"
            android:paddingStart="@dimen/spacing_normal"
            android:paddingTop="@dimen/spacing_generic"
            android:paddingEnd="@dimen/spacing_normal"
            android:paddingBottom="@dimen/spacing_generic"
            android:text="@string/four"
            android:textColor="@color/text_color_secondary"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_background" />

        <TextView
            fontPath="fonts/Montserrat-SemiBold.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="@{() -> handler.onClickQtyNo(@string/five)}"
            android:paddingStart="@dimen/spacing_normal"
            android:paddingTop="@dimen/spacing_generic"
            android:paddingEnd="@dimen/spacing_normal"
            android:paddingBottom="@dimen/spacing_generic"
            android:text="@string/five"
            android:textColor="@color/text_color_secondary"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_background" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="@{() -> handler.onClickMoreBtn()}">

            <TextView
                fontPath="fonts/Montserrat-SemiBold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_down_arrow_grey_wrapper"
                android:drawablePadding="@dimen/spacing_tiny"
                android:drawableTint="@color/text_color_link"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/spacing_normal"
                android:paddingTop="@dimen/spacing_generic"
                android:paddingEnd="@dimen/spacing_normal"
                android:paddingBottom="@dimen/spacing_generic"
                android:text="@string/more"
                android:textColor="@color/text_color_link"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
</layout>